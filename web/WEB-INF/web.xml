<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>encryptionPass</param-name>
        <param-value>mogambo</param-value>
    </context-param>
    <servlet>
        <servlet-name>RegistryServlet</servlet-name>
        <servlet-class>servlets.RegistryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMessage</servlet-name>
        <servlet-class>servlets.ServletMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewThreadServlet</servlet-name>
        <servlet-class>servlets.NewThreadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageRemoveServlet</servlet-name>
        <servlet-class>servlets.MessageRemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThreadRemoveServlet</servlet-name>
        <servlet-class>servlets.ThreadRemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewCategoryServlet</servlet-name>
        <servlet-class>servlets.NewCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryRemoveServlet</servlet-name>
        <servlet-class>servlets.CategoryRemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>servlets.ShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPrivateMessageServlet</servlet-name>
        <servlet-class>servlets.NewPrivateMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertProductServlet</servlet-name>
        <servlet-class>servlets.InsertProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistryServlet</servlet-name>
        <url-pattern>/RegistryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMessage</servlet-name>
        <url-pattern>/ServletMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewThreadServlet</servlet-name>
        <url-pattern>/NewThreadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageRemoveServlet</servlet-name>
        <url-pattern>/MessageRemoveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThreadRemoveServlet</servlet-name>
        <url-pattern>/ThreadRemoveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewCategoryServlet</servlet-name>
        <url-pattern>/NewCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryRemoveServlet</servlet-name>
        <url-pattern>/CategoryRemoveServlet</url-pattern>
